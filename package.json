{
  "name": "@parcellab/eslint-config",
  "version": "0.3.4",
  "description": "Specific parcelLab configuration for JavaScript and TypeScript projects",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./base": "./src/base.js",
    "./jest": "./src/jest.js",
    "./playwright": "./src/playwright.js",
    "./react-testing-library": "./src/react-testing-library.js",
    "./react-ts": "./src/react-ts.js",
    "./react": "./src/react.js",
    "./storybook": "./src/react.js",
    "./typescript": "./src/typescript.js"
  },
  "keywords": [
    "eslint",
    "config",
    "parcellab"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/parcelLab/eslint-config.git"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@parcellab/danger-plugin": "^0.0.17",
    "@types/eslint": "^8.4.6",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^28.1.7",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "child_process": "^1.0.2",
    "danger": "^11.1.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-playwright": "^0.10.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "eslint-plugin-testing-library": "^5.6.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">= 5",
    "eslint": ">=8",
    "eslint-config-airbnb": ">= 19",
    "eslint-config-airbnb-typescript": ">= 17",
    "eslint-config-prettier": ">= 8",
    "eslint-plugin-jest": ">= 26",
    "eslint-plugin-jsx-a11y": ">= 6",
    "eslint-plugin-playwright": ">= 0.10.0",
    "eslint-plugin-promise": ">= 6",
    "eslint-plugin-react": ">= 7",
    "eslint-plugin-react-hooks": ">= 4",
    "eslint-plugin-storybook": ">= 0.6.3",
    "eslint-plugin-testing-library": ">= 5",
    "eslint-plugin-unicorn": ">= 42",
    "prettier": ">= 2"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "eslint-config-airbnb": {
      "optional": true
    },
    "eslint-config-airbnb-typescript": {
      "optional": true
    },
    "eslint-plugin-jest": {
      "optional": true
    },
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-playwright": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-storybook": {
      "optional": true
    },
    "eslint-plugin-testing-library": {
      "optional": true
    }
  },
  "scripts": {
    "clean": "rimraf --no-glob ./dist ./coverage ./tsconfig.tsbuildinfo ./.eslintcache",
    "lint": "eslint  --ext .ts,.tsx,.js,.jsx && prettier --check .",
    "lint:commit": "commitlint -x @commitlint/config-conventional --edit",
    "lint:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix && prettier --write .",
    "test": "jest",
    "prepare": "is-ci || husky install",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "author": "engineering@parcellab.com",
  "license": "MIT"
}
